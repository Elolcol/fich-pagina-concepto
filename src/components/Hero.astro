---
import Chevron from "../assets/Chevron.astro";
---

<section>
  <div>
    <button><Chevron /></button>
    <article>
      <img
        src="https://datauniversitaria.com.ar/wp-content/uploads/2020/01/UNL-FICH.jpg"
        alt=""
      />
    </article>
    <button><Chevron /></button>
  </div>
  <ul>
    <li class="active"></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
  </ul>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 15px;
    width: 100%;
    height: 100%;

    div:first-child {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      gap: 15px;
      height: 550px;

      button:first-child {
        transform: rotate(180deg);
      }
      article {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        background-color: var(--foreground-color);
        border-radius: 20px;
        height: 100%;
        width: 100%;

        img {
          overflow: hidden;
          object-fit: cover;
          border-radius: 15px;
          width: 100%;
          height: 100%;
        }
      }
    }

    ul {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 15px;

      li {
        width: 40px;
        height: 10px;
        border-radius: 10000px;
        background-color: var(--foreground-color);
      }

      li.active {
        background-color: var(--hover-color);
      }
    }
  }
</style>
