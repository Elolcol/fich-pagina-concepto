---
import Clock from "../assets/Clock.astro";

interface Props {
  date: string;
  time: string;
  body: string;
  href: string;
  image: string;
}

const { href, date, body, image, time } = Astro.props;
---

<a href={href}>
  <span>
    <h2>
      {date}
    </h2>
    <h3>
      <Clock />
      {time}HS
    </h3>
  </span>
  <img src={image} width="220" height="170" alt="imagen" />
  <p>
    {body}
  </p>
</a>

<style>
  a {
    cursor: pointer;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    align-items: start;
    padding: 15px 15px;
    height: fit-content;
    width: 200px;
    min-height: 50px;
    border-radius: 20px;
    background-color: var(--foreground-color);

    span {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      h3,
      h2 {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        gap: 5px;
        width: 100%;
      }

      h3 {
        font-size: 12px;
      }
    }
    img {
      object-fit: cover;
      width: 100%;
      height: 100%;
      border-radius: 10px;
    }
  }

  a:hover {
    background-color: var(--hover-color);
  }
</style>
