---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href}>
  <h2>
    {title}
  </h2>
  <p>
    {body}
  </p>
</a>

<style>
  a {
    cursor: pointer;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
    gap: 10px;
    align-items: start;
    padding: 15px 15px;
    height: 100%;
    width: 100%;
    border-radius: 20px;
    background-color: var(--foreground-color);
  }

  a:hover {
    background-color: var(--hover-color);
  }
</style>
