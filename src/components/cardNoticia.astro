---
import Clock from "../assets/Clock.astro";

interface Props {
  date: string;
  body: string;
  href: string;
  image: string;
}

const { href, date, body, image } = Astro.props;
---

<a href={href}>
  <img src={image} width="220" height="170" alt="imagen" />
  <h2>
    <Clock />
    {date}
  </h2>
  <p>
    {body}
  </p>
</a>

<style>
  a {
    cursor: pointer;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    align-items: start;
    padding: 15px 15px;
    height: fit-content;
    width: 200px;
    min-height: 50px;
    border-radius: 20px;
    background-color: var(--foreground-color);

    h2 {
      display: flex;
      justify-content: start;
      align-items: center;
      text-align: center;
      gap: 5px;
      width: 100%;
      font-size: 12px;
    }
    img {
      object-fit: cover;
      width: 100%;
      height: 100%;
      border-radius: 10px;
    }
  }

  a:hover {
    background-color: var(--hover-color);
  }
</style>
