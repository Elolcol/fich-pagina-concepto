---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>FICH</title>
    <meta name="description" content="Astro description" />
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --backgraund-color: #fff;
    --foreground-color: #0061ae;
    --hover-color: #008eff;
    --primary-color: #0092ab;
    --primaryHover-color: #1079a9;
    --secondary-color: #333c4e;
    --secondaryHover-color: #66738d;
    --white-color: #ffffff;
    --gray-color: #c5c5c5;
    --darkgray-color: #808080;
    --black-color: #000000;

    --disabled: 0.5;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    color: var(--white-color);
    border: none;
    outline: none;
    text-decoration: none;
    transition: all 0.1s ease-in-out;
  }

  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  button {
    cursor: pointer;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    align-items: center;
    padding: 15px 15px;
    height: fit-content;
    width: fit-content;
    min-height: 50px;
    min-width: 50px;
    border-radius: 20px;
    background-color: var(--foreground-color);
  }

  a {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: fit-content;
    height: fit-content;
  }

  button:hover {
    background-color: var(--hover-color);
  }

  hr {
    width: 100%;
    height: 2px;
    border-radius: 1000px;
    background-color: var(--white-color);
  }

  main {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    padding: 50px 150px;
    gap: 50px;
    background-color: var(--backgraund-color);
  }
</style>
